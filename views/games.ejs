<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include ('partials/bootstrap-link') %>
    <title>Games</title>
  </head>
  <body>
    <%- include ('partials/navbar') %>
    <div class="container">
      <% var pageTitle, pageDescription; %> <% pageTitle = 'Games'; %> <% pageDescription = 'In this page you can find all of our available games.'; %>
      <div class="jumbotron">
        <h1 class="display-4"><%=pageTitle%></h1>
        <p class="lead"><%=pageDescription%></p>
      </div>
      <div class="container">
        <div class="row">
          <table class="table">
            <thead class="thead-light">
              <tr>
                <th scope="col">No.</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
              </tr>
            </thead>
            <% let i = 1 %>
            <tbody>
              <% games.forEach(game => { %>
              <tr>
                <td scope="row"><%= i %></td>
                <td><%= game.name %></td>
                <td><%= game.description %></td>
              </tr>
              <% i++ %> <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
